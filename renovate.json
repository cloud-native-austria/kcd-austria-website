{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "schedule": ["before 5am on monday"],
  "automerge": true,
  "automergeType": "branch",
  "packageRules": [
    {
      "updateTypes": ["minor", "patch"],
      "groupName": "all minor and patch updates",
      "automerge": true
    },
    {
      "updateTypes": ["major"],
      "groupName": "major updates",
      "automerge": false
    }
  ]
}
